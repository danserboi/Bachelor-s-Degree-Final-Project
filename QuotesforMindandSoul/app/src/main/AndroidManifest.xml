<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ro.danserboi.quotesformindandsoul">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher_quote"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_quote_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:name=".activities.ChangePasswordActivity"
            android:exported="false"
            android:label="Change Password"
            android:parentActivityName=".activities.MainActivity"
             />
        <activity
            android:name=".activities.MyQuotesActivity"
            android:exported="false"
            android:label="My Quotes"
            android:parentActivityName=".activities.MainActivity"
             />
        <activity
            android:name=".activities.AddQuoteActivity"
            android:exported="false"
            android:label="Add Quote"
            android:parentActivityName=".activities.MainActivity"
             />
        <activity
            android:name=".activities.CollectionQuotesActivity"
            android:exported="false"
            android:label="Quotes"
            android:parentActivityName=".activities.CollectionsActivity"
             />
        <activity
            android:name=".activities.ReviewsActivity"
            android:exported="false"
            android:label="Reviews"
             />
        <activity
            android:name=".activities.CollectionsActivity"
            android:exported="false"
            android:label="My Collections"
            android:parentActivityName=".activities.MainActivity"
             />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AboutActivity"
            android:label="@string/menu_about"
            android:parentActivityName=".activities.MainActivity"
             />
        <activity
            android:name=".activities.QuoteOfTheDayActivity"
            android:label="@string/menu_quote_of_the_day"
            
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.FavoritesActivity"
            android:label="@string/menu_favorites"
            android:parentActivityName=".activities.MainActivity"
             />
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".activities.MainActivity"
             />
        <activity
            android:name=".activities.RandomQuoteActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.SearchQuotesActivity"
            android:label="@string/resulting_quotes"
            android:parentActivityName=".activities.MainActivity"
             />
        <activity
            android:name=".activities.SingleQuoteActivity"
            
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.GenreActivity"
            android:parentActivityName=".activities.MainActivity"
            
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>